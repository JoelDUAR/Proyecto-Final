<div class="container-fluid mt-5">
<div class="row justify-content-center ">
<div class=" col-11 col-md-8 con-lg-6">
<form class="container forms py-4 text-white justify-content-center mt-5" action="login" method="post">
  <div class="mt-3">
    <label for="user" class="form-label">Ingresá tu usuario</label>
    <input type="text" class="form-control" id="user" name="user" autocomplete="Username" autofocus autocomplete="username">
  </div>
  <div class="mt-3 mb-3">
    <label for="pass" class="form-label">Ingresá tu password</label>
        <input type="password" class="form-control" id="pass" name="pass" autocomplete="current-password">
  </div>
  
  {{#if message}}
  <div class="alert alert-primary d-flex align-items-center" role="alert">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </svg>
  <div>
    {{message}}
  </div>
</div>
{{/if}}
<div class="text-center">
  <button type="submit" class="btn btn-primary my-2">Enviar</button>
</div>
  </form>
  </div>
</div>
</div>


<div class="text-center">
  <a href="/singUp"><button class=" btn btn-primary my-2">Registrarme</button></a>
 <a href="/"><input type="button" value="Home" class="btn btn-secondary"></a>
</div>

<table class="container-fluid forms table mt-5">
  <thead>
     <tr class="text-"center>
      <th colspan="5">
        <h4>Usuarios Registrados</h4>
        </th>
        </tr>
  <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Edad</th>
      <th scope="col">Usuario</th>
      <th scope="col">Imagen</th>
      <th scope="col" class="text-center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <td>{{nombre}}</td>
      <td>{{apellido}}</td>
      <td>{{edad}}</td>
      <td>{{usuario}}</td>
      <td><img src="{{imageURL}}" alt="{{nombre}}"></td>
      <td class="text-center">
        <a href="/editUser/{{id_usuario}}"><button class="btn btn-danger">Eliminar</button></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
