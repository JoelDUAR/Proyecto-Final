      <td>{{fecha}}</td>
      <td>{{descripcion}}</td>
      <td>{{monto}}</td>
      <td class="text-center">
        <a href="/editIncome/{{id_ingreso}}"><button class="btn btn-danger">Eliminar</button></a>
      </td>
    </tr>
    {{/each}}
